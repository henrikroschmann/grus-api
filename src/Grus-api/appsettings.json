{
  "MongoDb": {
    "ConnectionString": "mongodb://host.docker.internal:27017",
    "Database": "Grus"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "Secret": "your-256-bit-secret",
    "ExpiryMinutes": 60,
    "Issuer": "Grus",
    "Audience": "your-audience"
  },
  "Cors": {
    "AllowedOrigins": [ "http://localhost:3000", "https://example.com" ]
  }
}